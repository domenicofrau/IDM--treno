<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.idm.trenohibernate.Treno" table="TRENO">

		<id name="id" type="int" column="ID">
			<generator class="native" />
		</id>

		<property name="marca" column="MARCA" length="20"
			type="string" />

		<list name="vagoni" cascade="all" lazy="false">
			<key column="TRENO_ID" />
			<index column="posizione"></index>
			<one-to-many class="com.idm.trenohibernate.Vagone" />
		</list>
		<property name="prezzoTotaleVagoni"
			column="PREZZO_TOTALE_TRENO" type="int">
		</property>
		<property name="nomeTreno" column="NOME_TRENO" length="20"
			type="string" />
		<property name="pesoTotale" column="PESO_TOTALE" type="int"></property>
	</class>
</hibernate-mapping>